@model RegisterModel
<form asp-controller="Account" asp-action="Register" method="POST">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="h3 mb-3">Kayıt Ol</h1>
            <div class="card form-shadow">
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="FirstName">İsim</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="LastName">Soyisim</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="LastName">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="UserName">Kullanıcı Adı</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="UserName">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Password">Şifre</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="RePassword">Şifre Tekrar</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="RePassword">
                            <span asp-validation-for="RePassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Email">E-Posta</label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

