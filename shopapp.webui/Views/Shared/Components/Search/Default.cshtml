@model List<Category>
<div class="card mt-3">
    <div class="card-header">
        <h5>Arama Yap</h5>
    </div>
    <div class="card-body">
        <form action="/search">
            <div class="form-group mb-3">
                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="catId">
                    <option selected value="0">Kategori</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.CategoryId">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group mb-3">
                <input name="q" type="text" class="form-control" placeholder="Ürün İsmi">
            </div>
            <div class="row">
                <div class="col-md-6 pr-2">
                    <div class="form-group">
                        <input name="min" type="number" min="0" class="form-control" placeholder="En az">
                    </div>
                </div>
                <div class="col-md-6 pl-2">
                    <div class="form-group">
                        <input name="max" type="number" min="0" class="form-control" placeholder="En çok">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-sm btn-block p-2">
                <i class="fa-brands fa-searchengin fa-2xl"></i>
            </button>
        </form>
    </div>
</div>
