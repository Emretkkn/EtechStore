@model ProductDetailModel

<div class="card mt-5">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <img src="~/img/@Model.Product.ImageUrl" class="img-fluid">
            </div>
            <div class="col-md-9">
                <h1 class="mb-3">@Model.Product.Name</h1>
                @foreach (var item in Model.Categories)
                {
                    <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url"
                        class="btn btn-link p-0 mb-3">@item.Name</a>
                }
                <div class="mb-3">
                    <div class="row">
                        <div class="col-md-3">
                            <h4 class="text-primary mb-3">
                                @Model.Product.Price <i class="fa-solid fa-turkish-lira-sign"></i>
                            </h4>
                        </div>
                        <div class="col-md-3">
                            <form asp-controller="Cart" asp-action="AddToCart" method="POST" class="form-inline">
                                <input type="hidden" name="productId" value="@Model.Product.ProductId">
                                <div class="input-group mb-3">
                                    <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width: 60px;">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa-solid fa-cart-plus"></i> Ekle
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <p class="">@Html.Raw(Model.Product.Description)</p>
            </div>
        </div>
    </div>
</div>


